<div id="bags-container" class="fixed-bottom">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-12">
        <div class="product-cart">
          <div class="weight">
            <span v-if="data.details.weight">Gram:${data.details.weight} g.</span>
            <span v-if="data.details.total">Price: DKK ${data.details.total}.00.</span>
          </div>
          <div v-if="data.details.total" class="btn-group">
            <a href="#" class="outline-btn" data-bs-toggle="modal" data-bs-target="#AddProDuct">
              WATCH YOUR BAG
            </a>

            <a v-if="data.details.total >= 25" href="#" class="solid-btn" data-bs-toggle="modal"
              data-bs-target="#CloseBag">
              Close the Bag
            </a>
            <a v-else class="solid-btn" disabled>
              BUY FOR ${25 - data.details.total}K MORE
            </a>
          </div>
        </div>

      </div>
    </div>
  </div>

  <div class="modal" id="AddProDuct" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="addproduct" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title" id="staticBackdropLabel">Your Bag</h3>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body custom">
          <div v-for="product in data.bags" class="item-container">
            <div class="added-product">
              <div class="img-wrap">
                <img loading="lazy" height="auto" width="auto" :src="product.image" alt="alt">
              </div>
              <div class="item-name">
                <h6>${product.title}</h6>
                <h5>Approx ${product.amount} pieces</h5>
              </div>
            </div>
            <div class="buttons">
              <svg class="Icon Icon--info" width="15" height="15" viewBox="0 0 15 15" fill="none"
                xmlns="http://www.w3.org/2000/svg">
                <circle cx="7.5" cy="7.5" r="6.5" fill="#FFEEB0" stroke="#FBD754" stroke-width="2">
                </circle>
                <path fill-rule="evenodd" clip-rule="evenodd" d="M8 4H7V5H8V4ZM8 6H7V11H8V6Z" fill="black"></path>
              </svg>
              <div class="qty-btn">
                <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                  <path
                    d="M64 32C28.7 32 0 60.7 0 96V416c0 35.3 28.7 64 64 64H384c35.3 0 64-28.7 64-64V96c0-35.3-28.7-64-64-64H64zm88 200H296c13.3 0 24 10.7 24 24s-10.7 24-24 24H152c-13.3 0-24-10.7-24-24s10.7-24 24-24z">
                  </path>
                </svg>
                <ul>
                  <li>
                    <!-- <a href="#">Approx. 4 pieces</a> -->
                  </li>
                  <li>
                    <a href="#">For ${product.weight} grams</a>
                  </li>
                </ul>
                <svg class="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                  <path
                    d="M64 32C28.7 32 0 60.7 0 96V416c0 35.3 28.7 64 64 64H384c35.3 0 64-28.7 64-64V96c0-35.3-28.7-64-64-64H64zM200 344V280H136c-13.3 0-24-10.7-24-24s10.7-24 24-24h64V168c0-13.3 10.7-24 24-24s24 10.7 24 24v64h64c13.3 0 24 10.7 24 24s-10.7 24-24 24H248v64c0 13.3-10.7 24-24 24s-24-10.7-24-24z">
                  </path>
                </svg>
              </div>
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                class="feather feather-x">
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
              </svg>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
  <div class="modal fading" id="CloseBag" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false"
    aria-labelledby="CloseBag" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header border-bottom-0">
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body text-center pading">
          <h3>moment :)</h3>
          <p>You just have to name your bag so you can easily find it again</p>
          <input class="mb-4" type="text" placeholder="Enter the name of the bag" v-model="bagName">
          <div class="modal-btn-group">
            <a href="#" @click="putInBasket()" class="put-basket-btn">PUT IN BASKET</a>
            <a href="#" data-bs-dismiss="modal" class="put-bag-btn">...or put more in the bag</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="modal fading" id="productInfo" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false"
    aria-labelledby="productInfo" aria-hidden="true">

    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header border-bottom-0">
          <img :src="data.modalData.currentProductImg" loading="lazy" width="50" height="50"
            :alt="data.modalData.currentProductTitle" />
          <strong>${data.modalData.currentProductTitle}</strong>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body pading" v-html="data.modalData.currentProductInfo">
        </div>
      </div>
    </div>
  </div>
</div>
