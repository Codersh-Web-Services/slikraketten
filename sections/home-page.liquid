
<section class="hero-section">
	<div class="container">
			<div class="row">
					<div class="col-12">
							<div class="content">
									<h1>
	
										{{ section.settings.herotext }}
									</h1>
									<a href="{{ section.settings.herolink }}" class="btn-cta">{{section.settings.ordertext}}</a>
							</div>
					</div>
			</div>
	</div>
	</section>
	<section class="product" id="product-box">
	<div class="container">
	<div class="row">
									<div class="product-title">
											<h2>{{ section.settings.mixtitle }}</h2>
											<h4>{{ section.settings.mixtitle2 }}</h4>
									</div>
							</div>
			<div class="row">
					<div class="col-6 col-sm-6 col-md-4 col-xl-3 mb-5"  v-for="product in products">
							<product-component :added="product.added" :keepcounter="product.keepcounter" :productid="product.id" :show="product.show" :id="product.variants[0].id" :tags="product.tags" :weight="product.variants[0].grams" 
										:price="product.variants[0].price" :title="product.title" :desc="product.desc"
										:image="product.images[0].src" :vendor="product.vendor"> 
							<product-component/>
			</div>
	</div>
	</section>
	{% render 'product-component' %}
	<section class="logo-section">
	<div class="container-fluid">
			<div class="row">
				{% for block in section.blocks %}
					{% case block.type %}
						{% when 'logo' %}
								<div class="col-6 col-sm-4 col-md-2 text-center">
									<div class="img-wrap">
									{{ block.settings.image | image_url: width: 200 | image_tag }}
									</div>
							</div>
					{% endcase %}
				{% endfor %}
			</div>
	</div>
	</section>
